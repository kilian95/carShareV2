%h2 User

.row
	
	%dl.dl-horizontal
		%dt= t 'User ID', :default => "User ID:" 
		%dd= @user.id	
	%dl.dl-horizontal
		%dt= t 'First Name', :default => "Last Name:" 
		%dd= @user.firstName
	%dl.dl-horizontal
		%dt= t 'Last Name', :default => "Last Name:" 
		%dd= @user.lastName
	%dl.dl-horizontal
		%dt= t 'Email', :default => "Email:" 
		%dd= @user.email
	%dl.dl-horizontal
		%dt= t 'Gender', :default => "Gender:" 
		%dd= @user.gender
	%dl.dl-horizontal
		%dt= t 'Last signed in', :default => "Last signed in:" 
		%dd= @user.last_sign_in_at		

