%header.masthead.text-white.text-center
	.overlay
	.container
		.row
			.col-xl-9.mx-auto
				%h1.mb-5 Share a lift as a Driver or as a Passenger
		.row		
			.col-lg-3
			.col-lg-6
				= search_form_for @search, url: search_path do |f|
					.form-row
						.col-12.col-md-6.mb-2.mb-md-0.search
							=f.text_field :pickup_cont, class: "form-control form-control-lg", placeholder: 'Leaving from...'
							=f.text_field :dropoff_cont, class: "form-control form-control-lg", placeholder: 'Going to ...'
							%button.btn.btn-default#search{:type => "submit"} Search
		-if !user_signed_in?					
			.row
				.col-md-3
				.col-lg-6
					=link_to "Sign In", new_user_session_path, class: "btn btn-lg btn-info"
			
%h1 Most Recent Lift Offers

- @offers.each do |offer|
	.panel.panel-primary.info
		.row
			.col-sm-4
				%h4 Pick Up:
			.col-sm-4
				%h4= link_to offer.pickup, offer	
		.row
			.col-sm-4
				%h4 Drop Off:
			.col-sm-4
				%h4= link_to offer.dropoff, offer	
		.row
			.col-sm-4
				%h4 Date:
			.col-sm-4
				%h4= offer.date.strftime("%d-%m-%Y at %H:%M")
			.col-sm-4
				%h5
					Posted By: 
					=link_to offer.user.firstName, user_path(offer.user.id)
					=link_to offer.user.lastName, user_path(offer.user.id)